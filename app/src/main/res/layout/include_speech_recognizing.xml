<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/speech_recognizing_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="155dp"
        android:background="@drawable/speech_recongizing_bg"
        android:gravity="center"
        android:minHeight="300dp"
        android:minWidth="320dp"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <com.eningqu.emeeting.utils.SpeechingView
            android:layout_width="100dp"
            android:layout_height="100dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="识别中..."
            android:textColor="@color/speeching_color"
            android:textSize="@dimen/text_size_asring" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5" />
</LinearLayout>