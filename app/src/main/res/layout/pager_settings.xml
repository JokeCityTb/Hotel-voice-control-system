<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222831"
    android:scrollbars="none">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:layout_weight="1"
    android:background="#222831"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_itms_height"
        android:background="@drawable/select_bg"
        android:padding="@dimen/settings_itms_layout_margin_top"
        android:layout_marginTop="@dimen/settings_itms_layout_margin_top"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="3"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/wifi_icom" />
        </LinearLayout>
        <TextView
            android:id="@+id/txt_wifi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/setting_wifi"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:textSize="@dimen/size"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_itms_height"
        android:background="@drawable/select_bg"
        android:padding="@dimen/settings_itms_layout_margin_top"
        android:layout_marginTop="@dimen/settings_itms_layout_margin_top"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="3"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/shengji_icom" />
        </LinearLayout>
        <TextView
            android:id="@+id/txt_update"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/setting_update"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:textSize="@dimen/size"
            android:layout_weight="1" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_itms_height"
        android:background="@drawable/select_bg"
        android:padding="@dimen/settings_itms_layout_margin_top"
        android:layout_marginTop="@dimen/settings_itms_layout_margin_top"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="3"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/shengji_icom" />
        </LinearLayout>
        <TextView
            android:id="@+id/txt_about"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/setting_about"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:textSize="@dimen/size"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_itms_height"
        android:background="@drawable/select_bg"
        android:padding="@dimen/settings_itms_layout_margin_top"
        android:layout_marginTop="@dimen/settings_itms_layout_margin_top"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="3"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/shebei_icom" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/setting_devices"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:textSize="@dimen/size" />
            <TextView
                android:id="@+id/txt_devices"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/setting_devices"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:textSize="@dimen/size" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
</ScrollView>